<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="#1A252B">

    <FrameLayout
        android:id="@+id/frameBtn1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/back_btn">

        <ImageView
            android:id="@+id/test"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toTopOf="@id/frameBtn1"
            app:layout_constraintStart_toStartOf="@id/frameBtn1"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/quiz"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Test sorawlari"
            android:textSize="16sp"
            android:textColor="@color/black87"
            android:layout_marginTop="100dp"
            android:gravity="center"/>
    </FrameLayout>


    <FrameLayout
        android:id="@+id/frameBtn2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/frameBtn1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/back_btn">

        <ImageView
            android:id="@+id/jhq"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toTopOf="@id/frameBtn2"
            app:layout_constraintStart_toStartOf="@id/frameBtn2"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/chorraha_uzbekistan_pdd"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Jol ha'reketi qag'iydalari"
            android:textSize="16sp"
            android:textColor="@color/black87"
            android:layout_marginTop="100dp"
            android:gravity="center"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameBtn3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/frameBtn2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/back_btn">

        <ImageView
            android:id="@+id/med"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toTopOf="@id/frameBtn3"
            app:layout_constraintStart_toStartOf="@id/frameBtn3"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/chorraha_birinchi_yordam"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1-medicinaliq ja'rdem"
            android:textSize="16sp"
            android:textColor="@color/black87"
            android:layout_marginTop="100dp"
            android:gravity="center"/>
    </FrameLayout>


    <FrameLayout
        android:id="@+id/frameBtn4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/frameBtn1"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/back_btn">

        <ImageView
            android:id="@+id/shtraf"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toTopOf="@id/frameBtn4"
            app:layout_constraintStart_toStartOf="@id/frameBtn4"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/chorraha_jarima"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Shtraflar"
            android:textSize="16sp"
            android:textColor="@color/black87"
            android:layout_marginTop="100dp"
            android:gravity="center"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameBtn5"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/frameBtn4"
        app:layout_constraintStart_toEndOf="@id/frameBtn2"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/back_btn">

        <ImageView
            android:id="@+id/nomer"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintStart_toStartOf="@id/frameBtn5"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="@id/frameBtn5"
            android:layout_marginTop="10dp"
            android:background="@drawable/chorraha_main_raqam"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Avtomobil nomer belgileri"
            android:textSize="16sp"
            android:textColor="@color/black87"
            android:layout_marginTop="100dp"
            android:gravity="center"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameBtn6"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/frameBtn5"
        app:layout_constraintStart_toEndOf="@id/frameBtn3"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/back_btn">

        <ImageView
            android:id="@+id/transport"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintStart_toStartOf="@id/frameBtn6"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="@id/frameBtn6"
            android:layout_marginTop="10dp"
            android:background="@drawable/chorraha_main_taqiqlovchi"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Transport qurali"
            android:textSize="16sp"
            android:textColor="@color/black87"
            android:layout_marginTop="100dp"
            android:gravity="center"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>